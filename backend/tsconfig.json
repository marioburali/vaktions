{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "rootDir": "./src",
    "outDir": "./dist",

    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
